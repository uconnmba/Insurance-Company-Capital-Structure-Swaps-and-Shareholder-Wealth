@article{aggarwal03a,
   author = {Aggarwal, Rajesh K. and Sawmick, Andrew A.},
   title = {Why do managers diversify their firms? Agency reconsidered},
   journal = {The Journal of Finance},
   volume = {58},
   number = {1},
   pages = {71},
   abstract = {There are 2 prominent types of agency explanations for why managers choose to diversify their firms. The first type is that managers derive utility from reducing the idiosyncratic risk that they face. The second type is that managers diversify because they derive a private benefit from managing a more diversified firm. This study presents a model that incorporates both types of agency explanation. A contracting model is developed between shareholders and managers in which managers diversify their firms for 2 reasons: to reduce idiosyncratic risk and to capture private benefits. The comparative static predictions of the model are tested. In contrast to previous work, this study finds that diversification is positively related to managerial incentives. Further, the link between firm performance and managerial incentives is weaker for firms that experience changes in diversification than it is for firms that do not. Findings suggest that managers diversify their firms in response to changes in private benefits rather than to reduce their exposure to risk.},
